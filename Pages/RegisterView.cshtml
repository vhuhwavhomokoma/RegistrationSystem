@page
@model RegistrationSystem.Pages.RegisterViewModel
@{
	ViewData["Title"] = "REGISTRATION VIEW";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<style>
    .collapsible {
        background-color: #266af2;
        color: white;
        cursor: pointer;
        padding: 18px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 15px;
    }

        .active, .collapsible:hover {
            background-color: #0d3890;
        }

    .content {
        padding: 0 18px;
        display: none;
        overflow: hidden;
        background-color: #f1f1f1;
    }

</style>



<div>
    <form method="post">
        <label for="gsearch">Search Module Code:</label>
        <input asp-for="searchquery" type="text" id="gsearch">
        <button type="submit">Search</button>
    </form>
</div>

<body>
<div class="text-center" style="height: 200px; overflow-y: scroll;">
    @foreach(var module in Model.ModuleList){
    <button type="button" class="collapsible">@module.ModuleCode</button>
    <div class="content">
    <p>@module.ModuleCode @module.ModuleName @module.ModuleDetails</p>
                <button id="@module.ModuleCode" OnClick="displayPressed('@module.ModuleCode')">REGISTER</button>
    </div>
    }
</div>
    
    <div id="selectedButtons">
        
    </div>



</body>
    



<script>
    var coll = document.getElementsByClassName("collapsible");
    var i;

    for (i = 0; i < coll.length; i++) {
        coll[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var content = this.nextElementSibling;
            if (content.style.display === "block") {
                content.style.display = "none";
            } else {
                content.style.display = "block";
            }
        });
    }
</script>

<script>
    function displayPressed(buttonId) {
        var button = document.getElementById(buttonId);
        button.disabled = true;
        var buttonText = buttonId;
        var contentDiv = document.getElementById('selectedButtons');
        contentDiv.innerHTML += "<p>" + buttonText + "</p>";
    }

</script>
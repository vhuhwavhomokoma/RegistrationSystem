@page
@model RegistrationSystem.Pages.FinalizeChangeModel
@{
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h3 class="text-center">Sign Up</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        
                        <div class="form-group">
                            <label for="bnum">VerificationCode(000-000-0000):</label>
                            <input type="tel" id="bnum" class="form-control" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" />
                        </div>
                        <div class="form-group">
                            <label for="bpassword">New Password:</label>
                            <input asp-for="newpassword"  id="bpassword" type="password" class="form-control" required />
                            <img src="Icons/eye.svg" onmouseover="showPass();" onmouseout="hidePass();" />
                        </div>
                        <div class="form-group">
                            <label for="cpassword">Confirm Password:</label>
                            <input asp-for="confirmpassword" type="password" id="cpassword" class="form-control" required />
                            <img src="Icons/eye.svg" onmouseover="showPass2();" onmouseout="hidePass2();" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function showPass() {
        let obj = document.getElementById('bpassword');
        obj.type = 'text';
    }
    function hidePass() {
        let obj = document.getElementById('bpassword');
        obj.type = 'password';
    }

    function showPass2() {
        let obj = document.getElementById('cpassword');
        obj.type = 'text';
    }
    function hidePass2() {
        let obj = document.getElementById('cpassword');
        obj.type = 'password';
    }

</script>